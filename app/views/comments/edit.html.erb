<div class="max-w-2xl mx-auto">
  <div class="mt-10 md:w-[50%] rounded overflow-hidden shadow-xl shadow-purple-500 mx-auto">
   <div class="px-9 py-8 h-full bg-gray-200">
    <label for="comment" class="text-2xl font-bold mb-4  mx-auto">Edit Comment</label>
    <%= simple_form_for [@post,@comment] do |f| %>
     <%= f.input :description, label: 'Comment', placeholder: 'edit a comment...', label_html: {class: 'mt-4'}, input_html: {class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-50 dark:border-gray-600 dark:placeholder-gray-500 dark:text-black dark:focus:ring-blue-500 dark:focus:border-blue-500"} %>
      <%= f.submit 'Update',class: "text-white bg-gray-500 hover:bg-gray-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800" %>
    <% end %>
    </div>
  </div>
</div>
